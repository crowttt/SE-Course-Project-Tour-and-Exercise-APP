<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/result_card"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    card_view:cardElevation="5dp"
    card_view:cardCornerRadius="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp">

        <ImageView
            android:id="@+id/result_in_list_view_icon"
            android:layout_height="60dp"
            android:layout_width="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"

            />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/result_in_list_view_date_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="日期"/>

            <TextView
                android:id="@+id/result_in_list_view_exerciseName_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="運動項目"/>

            <TextView
                android:id="@+id/result_in_list_view_time_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="持續時間"/>

            <TextView
                android:id="@+id/result_in_list_view_speed_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="平均速率" />
            <TextView
                android:id="@+id/result_in_list_view_calorie_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="消耗卡路里" />
        </LinearLayout>

        <LinearLayout
            android:layout_marginLeft="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/result_in_list_view_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/result_in_list_view_exerciseName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/result_in_list_view_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/result_in_list_view_speed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/result_in_list_view_calorie"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </LinearLayout>
 </android.support.v7.widget.CardView>